<!DOCTYPE html>
<html>
<title>
  <%= info_total_home_page[0] %>
</title>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

<link href="/stylesheets/assets/css/bootstrap.css" rel="stylesheet">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="/javascripts/management_delete.js"></script>
<script src="/javascripts/management_edit.js"></script>
<script src="/javascripts/management_showroom.js"></script>

<body>

  <div class="container w3-center w3-panel w3-green">
    <h2 class="w3-opacity">Admin</h2>
  </div>

  <div class="container  w3-green">

    <button class="w3-bar-item w3-button w3-small" onclick="location.href='/'">
      <%= menu_data.menu_homepage %>
    </button>
    <button class="w3-bar-item w3-button w3-small" onclick="openCity('upload_event')">

      <%= menu_data.post_gallery_admin %>
    </button>
    <button class="w3-bar-item w3-button w3-small" onclick="openCity('upload_congdong')">
      <%= menu_data.post_event_admin %>
    </button>
    <button class="w3-bar-item w3-button w3-small" onclick="openCity('editgallery')">
      Chỉnh sửa bài Sưu tập
    </button>
    <button class="w3-bar-item w3-button w3-small" onclick="openCity('editpost')">
      Chỉnh sửa Sự Kiện
    </button>

    <button class="w3-bar-item w3-button w3-small" onclick="openCity('delete')">
      Xóa bài
    </button>

    <button class="w3-bar-item w3-button w3-small" onclick="openCity('chat_24h')">Chat Trực Tuyến</button>
    <button class="w3-bar-item w3-button w3-small w3-right">
      <a href="/admin/log_out">
        <%= menu_data.logout %>
      </a>
    </button>
  </div>

  <!-- Add a frame chat 24h -->
  <div id="chat_24h" class="container w3-display-container city" style="display: none">
    <h1 style="text-shadow:1px 1px 0 #444">Chat </h1>
    <iframe src="https://vchat.vn/home/support_v2.php" style="width: 100%;height: 600px;"></iframe>
  </div>

  <div class="container">
    <div id="upload_event" class=" w3-display-container city">
      <form class="w3-container w3-card-4 " action="/admin-home/add_event/gallary" method="POST" enctype="multipart/form-data">
        <h1 style="text-shadow:1px 1px 0 #444">
          <%= menu_data.post_gallery_admin %>
        </h1>

        <div class="w3-dropdown-hover">
          <select class="w3-button w3-card-4" name="lang_add">
            <option value="en">Đăng Tiếng Anh </option>
            <option value="vi">Đăng Tiếng Việt </option>
          </select>
        </div>
        <br/>
        <br/>
        <p>
          <label>Tiêu đề</label>
          <input class="w3-input" type="text" name="title" />
        </p>
        <p>
          <label>Giá</label>
          <input class="w3-input" type="number" name="price" />
        </p>
        <p>
          <label>Địa chỉ</label>
          <input class="w3-input" type="text" name="address" />
        </p>
        <label>Miêu tả </label>
        <textarea class="w3-input" placeholder="Write something.." name="description" /></textarea>
        </br>
        <label>Ngày tổ chức sự kiện</label>
        <input type="date" class="w3-input" placeholder="Write something.." name="date" />
        </br>
        <label>Chọn Ảnh</label>
        <input type="file" class="w3-input" placeholder="Write something.." name="files" />
        </br>
        <input class="w3-button w3-green" type="submit" value="Đăng">
        </p>
      </form>
    </div>

    <div id="upload_congdong" class=" w3-display-container city" style="display:none">
      <form class="w3-container w3-card-4 " action="/admin-home/add_event/event" method="POST" enctype="multipart/form-data">
        <h1 style="text-shadow:1px 1px 0 #444">
          <%= menu_data.post_event_admin %>

        </h1>
        <div class="w3-dropdown-hover">
          <select class="w3-button w3-card-4" name="gallary">
            <option value="0">Đăng Sự Kiện </option>
            <option value="1">Đăng Triển lãm </option>
            <option value="2">Đăng Showrom </option>
          </select>
        </div>
        <div class="w3-dropdown-hover">
          <select class="w3-button w3-card-4" name="lang_add">
            <option value="en">Đăng Tiếng Anh </option>
            <option value="vi">Đăng Tiếng Việt </option>
          </select>
        </div>
        <br/>
        <br/>
        <p>
          <label>Tiêu đề</label>
          <input class="w3-input" type="text" name="title" />
        </p>
        <p>
          <label>Giá</label>
          <input class="w3-input" type="number" name="price" />
        </p>
        <p>
          <label>Địa chỉ</label>
          <input class="w3-input" type="text" name="address" />
        </p>
        <label>Miêu tả </label>
        <textarea class="w3-input" placeholder="Write something.." name="description" /></textarea>
        </br>
        <label>Ngày tổ chức sự kiện</label>
        <input type="date" class="w3-input" placeholder="Write something.." name="date" />
        </br>
        <label>Chọn Ảnh</label>
        <input type="file" class="w3-input" placeholder="Write something.." name="files" />
        </br>
        <input class="w3-button w3-green" type="submit" value="Đăng">
        </p>
      </form>
    </div>
    <div id="editgallery" class=" w3-display-container city" style="display:none">
      <form class="w3-container w3-card-4 " action="/admin-home/add_event/gallary" method="POST" enctype="multipart/form-data">
        <h1 style="text-shadow:1px 1px 0 #444">
          Chỉnh sửa Bộ Sưu tập
        </h1>

        <div class="w3-dropdown-hover">
          <select class="w3-button w3-card-4" id='setLang' name="lang_add">
            <option value="">Chọn ngôn ngữ cần sửa </option>
            <option value="en">Sửa Tiếng Anh </option>
            <option value="vi">Sửa Tiếng Việt </option>
          </select>
        </div>
        <div class="w3-dropdown-hover">
          <select class="w3-button w3-card-4" id='post_edit_gallery' name="lang_add">
            <option value="">Chọn bài cần sửa </option>
          </select>
        </div>
        <br/>
        <br/>
        <div id='loadDataGalleryEdit'>

        </div>
        </br>
        <input class="w3-button w3-green" type="submit" value="Chỉnh sửa">
        </p>
      </form>
    </div>
    <div id="editpost" class=" w3-display-container city" style="display:none">
      <form class="w3-container w3-card-4 " action="/admin-home/add_event/event" method="POST" enctype="multipart/form-data">
        <h1 style="text-shadow:1px 1px 0 #444">
          Chỉnh sửa bài
        </h1>
        <div class="w3-dropdown-hover">
          <select class="w3-button w3-card-4" id="post_edit_type" name="gallary">
            <option value="">Chọn kiểu sửa</option>
            <option value="0">Sửa Sự Kiện </option>
            <option value="1">Sửa Triển lãm </option>
            <option value="2">Sửa Showrom </option>
          </select>
        </div>
        <div class="w3-dropdown-hover" id="loadfirstDropdown">
          <select class="w3-button w3-card-4" id="post_edit_lang" name="lang_add">
            <option value="">Chọn ngôn ngữ </option>
          </select>
        </div>
        <div class="w3-dropdown-hover" id="loadsecondDropdown">
          <select class="w3-button w3-card-4" id="post_edit_showroom" name="lang_add">
            <option value="">Chọn bài cần sửa </option>
          </select>
        </div>
        <br/>
        <br/>
        <div id='loadDataEditShowRoow'>
         
        </div>
        </br>
        <input class="w3-button w3-green" type="submit" value="Đăng">
      </form>
    </div>
    <div id="delete" class=" w3-display-container city" style="display:none">
      <h1 style="text-shadow:1px 1px 0 #444">Chỉnh sửa</h1>
      <input type="text" id="id_video" hidden />

      <div class="w3-dropdown-hover">
        <select class="w3-button w3-card-4" id="type_edit">
          <option value="">--Chọn kiểu xóa--</option>
          <option value="event">Xóa mẫu hàng</option>
          <option value="gallery">Xóa bài bộ sưu tập</option>
        </select>
      </div>
      <div class="w3-dropdown-hover">
        <select class="w3-button w3-card-4" id="link_video">
          <option value="">--Chọn bài cần sửa--</option>
        </select>
      </div>

      <br/>
      <br/>
      <br/>
      <form class="w3-container w3-card-4" action="/admin-home/delete_post" method="GET">
        <input id="id_delete" class="w3-button w3-green" type="hidden" value="" name="id_delete" />
        <input id="type" class="w3-button w3-green" type="hidden" value="" name="type" />
        <input class="w3-button w3-green" type="submit" value="Xóa bài này">
      </form>

    </div>
  </div>
  <script>
    function openCity(cityName) {
      var i;
      var x = document.getElementsByClassName("city");
      for (i = 0; i < x.length; i++) {
        x[i].style.display = "none";
      }
      document.getElementById(cityName).style.display = "block";
    }
  </script>
</body>

</html>